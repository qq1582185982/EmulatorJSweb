{
  "name": "emulatorjs-desktop",
  "version": "1.0.0",
  "description": "EmulatorJS 桌面版 - 经典游戏模拟器",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win --x64",
    "build-all": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.emulatorjs.desktop",
    "productName": "EmulatorJS游戏中心",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist",
      "!*.bat",
      "!*.sh",
      "!*.md",
      "!api",
      "!index.html",
      "!player.html"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "EmulatorJS游戏中心"
    }
  },
  "author": "EmulatorJS",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {}
}
